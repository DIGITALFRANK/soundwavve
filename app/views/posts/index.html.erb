
<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>What's Happening On The SoundWavve</h1>
  
  <table  class="post_table">
    <thead>
      <tr class="table_row">
        <th class="post_head">Title</th>
        <th class="post_head">Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @posts.each do |post| %>
        <tr class="table_row">
          <td class="post_title"><%= post.title %></td>
          <td class="post_body"><%= post.body %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Post', new_post_path %>
</dib>
