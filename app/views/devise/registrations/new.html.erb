<div class="page_container register_container">
  <div class="container">
    <h2>Sign up</h2>
    
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
        <%= f.email_field :first_name, autofocus: true, class: "new_user_input" %>
        <%= f.email_field :last_name, class: "new_user_input" %>
        <%= f.email_field :email, autocomplete: "email", class: "new_user_input" %>
        <%= f.password_field :password, autocomplete: "off", class: "new_user_input" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "new_user_input" %>
    
        <%= f.submit "create your account" %>
    <% end %>
    
    <%= render "users/shared/links" %>
  </div>
</div>